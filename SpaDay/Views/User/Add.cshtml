
    <form class="text-center border border-light p-5" method='post'>

        <p class="h4 mb-4">Sign up</p>

        <input name='username' type="text" class="form-control mb-4" placeholder="Username" value="@ViewBag.username">

        <input name='email' type="email" class="form-control mb-4" placeholder="Email" value="@ViewBag.email">

        <input name='password' type="password" class="form-control mb-4" placeholder="Enter Password">

        <input name='verify' type="password"  class="form-control mb-4" placeholder="Reenter Password">


        @if (@ViewBag.error != null)
        {<p style="color: red;">@ViewBag.error</p>}

        <input type="submit" value="submit" class="btn btn-dark" />

    </form>