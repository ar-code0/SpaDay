@using SpaDay.ViewModels;
@model AddUserViewModel;

<h5>Sign Up Form</h5>


    <form method="post" action="/user" class="form-group">
        <div>
            <input asp-for="Username" placeholder="Username" />
            <span asp-validation-for="Username"></span>
        </div><br />
        <div>
            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email"></span>
        </div><br />
        <div>
            <input asp-for="Password" placeholder="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div><br />
        <div>
            <input asp-for="Verifypassword" placeholder="Confirm Password" type="password" />
            <span asp-validation-for="Verifypassword"></span>
        </div><br />
        <div>
            <input type="submit" value="submit" class="btn btn-dark" />
        </div>
    </form>

